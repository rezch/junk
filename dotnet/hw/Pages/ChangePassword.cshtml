@page
@model BulletinBoard.Pages.ChangePasswordModel

<h2>Изменить пароль</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div style="color: green">@Model.Message</div>
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div style="color: red">@Model.ErrorMessage</div>
}

@if (Model.Username == null)
{
    <div style="color: red">Вы не вошли в систему.</div>
}
else
{
    <form method="post">
        <p>
            <label>Текущий пароль:<br>
                <input asp-for="OldPassword" type="password" required />
            </label>
        </p>
        <p>
            <label>Новый пароль:<br>
                <input asp-for="NewPassword" type="password" required />
            </label>
        </p>
        <p>
            <label>Подтвердите новый пароль:<br>
                <input asp-for="NewPasswordRepeat" type="password" required />
            </label>
        </p>
        <button type="submit">Сменить пароль</button>
        <a href="/" style="margin-left:10px;">На главную</a>
    </form>
}
