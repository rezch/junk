@page
@model BulletinBoard.Pages.EditNoteModel

<h2>Редактировать объявление</h2>
<a href="/MyNotes">← К моим объявлениям</a>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div style="color:red">@Model.ErrorMessage</div>
}
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div style="color:green">@Model.SuccessMessage</div>
}

@if (Model.Note == null)
{
    <div style="color:orange">Объявление не найдено или у вас нет доступа.</div>
}
else
{
    <form method="post">
        <input type="hidden" asp-for="Input.Id" />
        <p>
            <label>Название: <input asp-for="Input.Name" required /></label>
        </p>
        <p>
            <label>Цена: <input asp-for="Input.Price" type="number" min="0" step="0.01" /></label>
        </p>
        <p>
            <label>Описание: <br />
            <textarea asp-for="Input.Description" rows="4" cols="50"></textarea></label>
        </p>
        <button type="submit">Сохранить</button>
    </form>
}
